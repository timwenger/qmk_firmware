// https://docs.qmk.fm/features/combo#dictionary-management

//   name                result                 chord keys

// Left hand general
// ======================================================================

COMB(PAGE_UP,            KC_PGUP,               KC_W, KC_F)
COMB(PAGE_DOWN,          KC_PGDN,               KC_F, KC_P)

COMB(NO_PS2BTN_LCTRL,    KC_LCTL,               KC_T, LSFT_T(KC_BSPC))
COMB(NO_PS2BTN_LALT,     KC_LALT,               KC_S, LSFT_T(KC_BSPC))

COMB(CLOSE_WINDOW,       LALT(KC_F4),           KC_Q, KC_W, KC_F, KC_P)
COMB(PRINT_SCREEN,       KC_PRINT_SCREEN,       KC_R, KC_S, KC_T)
COMB(TOGGLE_TO_L_HAND,   TG(LH_NUM),            LT(NUM, KC_A), KC_R, KC_S, KC_T)
COMB(TOGGLE_FROM_L_HAND, TG(LH_NUM),            LT(AROW, KC_0), KC_4, KC_5, KC_6)
COMB(TASK_MANAGER,       RCS(KC_ESC),           LT(AROW, KC_Z), KC_X, KC_C, KC_V)

COMB(LEFT_HAND_HOME,     KC_HOME,               KC_LEFT, KC_DOWN)


// Right hand general
// ======================================================================

COMB(BACK_TICK,          KC_GRV,                KC_L, KC_U)
COMB(QUOTES,             KC_QUOT,               KC_U, KC_Y)
COMB(SEMICOLON,          KC_SEMICOLON,          KC_COMM, KC_DOT)

COMB(NO_PS2BTN_RCTRL,    KC_RCTL,               KC_N, RSFT_T(KC_SPC))
COMB(NO_PS2BTN_RALT,     KC_RALT,               KC_E, RSFT_T(KC_SPC))

// modifiers
// ======================================================================

COMB(L_WIN,              KC_LWIN,               KC_C, KC_V)
COMB(R_WIN,              KC_RWIN,               KC_M, KC_COMM)
COMB(CAPS_WORD,          QK_CAPS_WORD_TOGGLE,   LSFT_T(KC_BSPC), RSFT_T(KC_SPC))

// brackets
// ======================================================================

COMB(L_SQUARE_BRACKET,   KC_LBRC,               KC_W, KC_P)
COMB(R_SQUARE_BRACKET,   KC_RBRC,               KC_L, KC_Y)
COMB(L_PARENTHESIS,      KC_LPRN,               KC_R, KC_T)
COMB(R_PARENTHESIS,      KC_RPRN,               KC_N, KC_I)
COMB(L_CURLY_BRACE,      KC_LCBR,               KC_X, KC_V)
COMB(R_CURLY_BRACE,      KC_RCBR,               KC_M, KC_DOT)


// numbers layer (copies of base layer only, since otherwise they take a second to load)
// ======================================================================

COMB(SEMICOLON_CPY,      KC_SEMICOLON,          KC_2, KC_3)

COMB(NO_PS2BTN_LCTRL_NUM, KC_LCTL,              KC_MINS, LSFT_T(KC_BSPC))
COMB(NO_PS2BTN_LALT_NUM,  KC_LALT,              KC_SLSH, LSFT_T(KC_BSPC))
COMB(NO_PS2BTN_RCTRL_NUM, KC_RCTL,              KC_4, RSFT_T(KC_SPC))
COMB(NO_PS2BTN_RALT_NUM,  KC_RALT,              KC_5, RSFT_T(KC_SPC))


// Arrows layer (copies of base layer only, since otherwise they take a second to load)
// ======================================================================

COMB(NO_PS2BTN_LCTRL_ARW, KC_LCTL,              KC_RGHT, LSFT_T(KC_BSPC))
COMB(NO_PS2BTN_LALT_ARW,  KC_LALT,              KC_DOWN, LSFT_T(KC_BSPC))
COMB(NO_PS2BTN_RCTRL_ARW, KC_RCTL,              KC_F4, RSFT_T(KC_ENTER))
COMB(NO_PS2BTN_RALT_ARW,  KC_RALT,              KC_F5, RSFT_T(KC_ENTER))


// 3x vertical, don't accidentally touch me combos. Sorted from left to right
// ======================================================================

COMB(PC_LOCK,            RWIN(KC_L),            KC_AUDIO_MUTE, KC_TAB, KC_MEDIA_PLAY_PAUSE)
COMB(L_BOOTLOADER,       QK_BOOTLOADER,         KC_Q, LT(NUM, KC_A), LT(AROW, KC_Z))
COMB(R_BOOTLOADER,       QK_BOOTLOADER,         KC_ESC, LT(AROW, KC_O), KC_QUES)
COMB(REBOOT_KEYBOARD,    QK_REBOOT,             KC_AUDIO_VOL_UP, KC_DEL, KC_AUDIO_VOL_DOWN)
