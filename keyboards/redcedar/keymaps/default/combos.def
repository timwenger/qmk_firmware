// https://docs.qmk.fm/features/combo#dictionary-management

//   name                result                 chord keys

// Left hand general
// ======================================================================

COMB(PAGE_UP,            KC_PGUP,               KC_W, KC_F)
COMB(PAGE_DOWN,          KC_PGDN,               KC_F, KC_P)

COMB(LCTRL,    KC_LCTL,                         KC_T, LSFT_T(KC_BSPC))
COMB(LALT,     KC_LALT,                         KC_S, LSFT_T(KC_BSPC))
COMB(LESC,     KC_ESC,                          KC_R, LSFT_T(KC_BSPC))

COMB(CLOSE_WINDOW,       LALT(KC_F4),           KC_Q, KC_W, KC_F, KC_P)
COMB(PRINT_SCREEN,       KC_PRINT_SCREEN,       LT(L_PKY, KC_A), KC_R, KC_S, KC_T)
COMB(TASK_MANAGER,       RCS(KC_ESC),           LT(L_LPKY, KC_Z), KC_X, KC_C, KC_V)

COMB(TOGGLE_TO_L_HAND,   TG(LH),                KC_R, KC_S, KC_T)
COMB(TOGGLE_FROM_L_HAND, TG(LH),                KC_4, KC_5, KC_6)


// Right hand general
// ======================================================================

COMB(BACK_TICK,          KC_GRV,                        KC_L, KC_U)
COMB(QUOTES,             KC_QUOT,                       KC_U, KC_Y)
COMB(SEMICOLON,          KC_SEMICOLON,                  KC_COMM, KC_DOT)
        
COMB(RCTRL,              KC_RCTL,                       KC_N, RSFT_T(KC_SPC))
COMB(RALT,               KC_RALT,                       KC_E, RSFT_T(KC_SPC))
COMB(RESC,               KC_ESC,                        KC_I, RSFT_T(KC_SPC))

COMB(TAP_TERM_LONGER,    QK_DYNAMIC_TAPPING_TERM_UP,    KC_L, KC_U, KC_Y, KC_ESC)
COMB(PRINT_TAP_TERM,     QK_DYNAMIC_TAPPING_TERM_PRINT, KC_N, KC_E, KC_I, LT(R_PKY, KC_O))
COMB(TAP_TERM_SHORTER,   QK_DYNAMIC_TAPPING_TERM_DOWN,  KC_M, KC_COMM, KC_DOT, KC_QUES)

// modifiers
// ======================================================================

COMB(L_WIN,              KC_LWIN,               KC_C, KC_V)
COMB(R_WIN,              KC_RWIN,               KC_M, KC_COMM)
COMB(CAPS_WORD,          QK_CAPS_WORD_TOGGLE,   LSFT_T(KC_BSPC), RSFT_T(KC_SPC))

// brackets
// ======================================================================

COMB(L_SQUARE_BRACKET,   KC_LBRC,               KC_W, KC_P)
COMB(R_SQUARE_BRACKET,   KC_RBRC,               KC_L, KC_Y)
COMB(L_PARENTHESIS,      KC_LPRN,               KC_R, KC_T)
COMB(R_PARENTHESIS,      KC_RPRN,               KC_N, KC_I)
COMB(L_CURLY_BRACE,      KC_LCBR,               KC_X, KC_V)
COMB(R_CURLY_BRACE,      KC_RCBR,               KC_M, KC_DOT)


// left pinky layer (copies of base layer only, since otherwise they take a second to load)
// ======================================================================

COMB(SEMICOLON_CPY,      KC_SEMICOLON,          KC_2, KC_3)

COMB(LCTRL_L_PKY,        KC_LCTL,              KC_MINS, LSFT_T(KC_BSPC))
COMB(LALT_L_PKY,         KC_LALT,              KC_SLSH, LSFT_T(KC_BSPC))
COMB(LESC_L_PKY,         KC_ESC,               KC_BSLS, LSFT_T(KC_BSPC))
COMB(RCTRL_L_PKY,        KC_RCTL,              KC_4, RSFT_T(KC_SPC))
COMB(RALT_L_PKY,         KC_RALT,              KC_5, RSFT_T(KC_SPC))
COMB(RESC_L_PKY,         KC_ESC,               KC_6, RSFT_T(KC_SPC))

// left-hand-only layer (copies of base layer only, since otherwise they take a second to load)
// ======================================================================

COMB(LCTRL_LH,           KC_LCTL,              KC_6, LSFT_T(KC_BSPC))
COMB(LALT_LH,            KC_LALT,              KC_5, LSFT_T(KC_BSPC))
COMB(LESC_LH,            KC_ESC,               KC_4, LSFT_T(KC_BSPC))


// right layer (copies of base layer only, since otherwise they take a second to load)
// ======================================================================

COMB(LCTRL_R_PKY,        KC_LCTL,              KC_RGHT, LSFT_T(KC_BSPC))
COMB(LALT_R_PKY,         KC_LALT,              KC_DOWN, LSFT_T(KC_BSPC))
COMB(LESC_R_PKY,         KC_ESC,               KC_LEFT, LSFT_T(KC_BSPC))
COMB(RCTRL_R_PKY,        KC_RCTL,              KC_F4, RSFT_T(KC_ENTER))
COMB(RALT_R_PKY,         KC_RALT,              KC_F5, RSFT_T(KC_ENTER))
COMB(RESC_R_PKY,         KC_ESC,               KC_F6, RSFT_T(KC_ENTER))


// 3x vertical, don't accidentally touch me combos. Sorted from left to right
// ======================================================================

COMB(PC_LOCK,            RWIN(KC_L),            KC_AUDIO_MUTE, KC_TAB, KC_MEDIA_PLAY_PAUSE)
COMB(L_BOOTLOADER,       QK_BOOTLOADER,         KC_Q, LT(L_PKY, KC_A), LT(L_LPKY, KC_Z))
COMB(R_BOOTLOADER,       QK_BOOTLOADER,         KC_ESC, LT(R_PKY, KC_O), KC_QUES)
COMB(REBOOT_KEYBOARD,    QK_REBOOT,             KC_AUDIO_VOL_UP, KC_DEL, KC_AUDIO_VOL_DOWN)
