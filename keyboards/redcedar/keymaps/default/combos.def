// https://docs.qmk.fm/features/combo#dictionary-management

//   name                result                 chord keys

// Left hand general
// ======================================================================

COMB(PAGE_UP,            KC_PGUP,               KC_W, KC_F)
COMB(PAGE_DOWN,          KC_PGDN,               KC_F, KC_P)

COMB(LEFT_CLICK,         QK_MOUSE_BUTTON_1,     KC_T, LSFT_T(KC_BSPC))
COMB(RIGHT_CLICK,        QK_MOUSE_BUTTON_2,     KC_S, LSFT_T(KC_BSPC))

COMB(CLOSE_WINDOW,       LALT(KC_F4),           KC_Q, KC_W, KC_F, KC_P)
COMB(PRINT_SCREEN,       KC_PRINT_SCREEN,       KC_R, KC_S, KC_T)
COMB(TOGGLE_TO_L_HAND,   TG(LH_NUM),            LT(NUM, KC_A), KC_R, KC_S, KC_T)
COMB(TOGGLE_FROM_L_HAND, TG(LH_NUM),            LT(AROW, KC_0), KC_4, KC_5, KC_6)
COMB(TASK_MANAGER,       RCS(KC_ESC),           LT(AROW, KC_Z), KC_X, KC_C, KC_V)

COMB(LEFT_HAND_HOME,     KC_HOME,               KC_LEFT, KC_DOWN)


// Right hand general
// ======================================================================

COMB(BACK_TICK,          KC_GRV,                KC_L, KC_U)
COMB(QUOTES,             KC_QUOT,               KC_U, KC_Y)
COMB(SEMICOLON,          KC_SEMICOLON,          KC_COMM, KC_DOT)

COMB(DASH_AND_UNDERSCR,  KC_MINS,               KC_N, RSFT_T(KC_SPC))
COMB(EQUALS,             KC_EQUAL,              KC_E, RSFT_T(KC_SPC))

// modifiers
// ======================================================================

COMB(L_WIN,              KC_LWIN,               KC_C, KC_V)
COMB(R_WIN,              KC_RWIN,               KC_M, KC_COMM)
COMB(CAPS_WORD,          QK_CAPS_WORD_TOGGLE,   LSFT_T(KC_BSPC), RSFT_T(KC_SPC))

// brackets
// ======================================================================

COMB(L_SQUARE_BRACKET,   KC_LBRC,               KC_W, KC_P)
COMB(R_SQUARE_BRACKET,   KC_RBRC,               KC_L, KC_Y)
COMB(L_PARENTHESIS,      KC_LPRN,               KC_R, KC_T)
COMB(R_PARENTHESIS,      KC_RPRN,               KC_N, KC_I)
COMB(L_CURLY_BRACE,      KC_LCBR,               KC_X, KC_V)
COMB(R_CURLY_BRACE,      KC_RCBR,               KC_M, KC_DOT)


// numbers layer (copies of base layer only, since they take a second to load)
// likely because the layer isn't activated yet until the tapping term on the 'A' key expires.
// ======================================================================

COMB(EQUALS_CPY,         KC_EQUAL,              KC_7, KC_8, KC_9)
COMB(MINUS_SIGN,         KC_KP_MINUS,           KC_4, KC_5, KC_6)
COMB(SEMICOLON_CPY,      KC_SEMICOLON,          KC_2, KC_3)


// 3x vertical, don't accidentally touch me combos
// ======================================================================

COMB(L_BOOTLOADER,       QK_BOOTLOADER,         KC_AUDIO_MUTE, KC_TAB, KC_MEDIA_PLAY_PAUSE)
COMB(R_BOOTLOADER,       QK_BOOTLOADER,         KC_AUDIO_VOL_UP, KC_ENTER, KC_AUDIO_VOL_DOWN)
COMB(PC_SLEEP,           KC_SYSTEM_SLEEP,       KC_Q, LT(NUM, KC_A), LT(AROW, KC_Z))
COMB(PC_LOCK,            RWIN(KC_L),            KC_ESC, LT(AROW, KC_O), KC_QUES)
